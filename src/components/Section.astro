---
const { title } = Astro.props;

---


<section>
    {title && <h2><span class="me-0.5">#</span>{title}</h2>}
    <slot />
        
</section>


<style>
    section{
        max-width: 770px;
        margin: 0 auto 50px;        
    }

    span {
        color: rgb(84, 238, 186);
        margin-right: 3px;
    }


    h2 {
        color: black;
        margin-bottom: 8px;
        font-weight: 700;
        line-height: 1.5;
        font-size: 1.5rem;
    }

    h2:hover {
        color: rgb(122, 138, 133);

    }

</style>