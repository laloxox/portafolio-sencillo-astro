---
import Section from "../Section.astro"


import { education } from "@cv"
---

<Section title="# Education">

        <ul>
            {
            education.map(
                ({ institution, area, url, startDate, endDate}) => {
                return (
                <li>
                    <h3>{institution}</h3>
                    <h4>{area}</h4>
                    <p>Start Date:{startDate}</p>
                    <p>{endDate}</p>
                    <a>{url}</a>
                    
                </li>
                )
            }
        )
    }

</Section>


<style>

    h3 {
        font-weight: 500;
        color: #111;
    }


    h4 {
        font-weight: 450;
        color: #222;
        margin-top: 3px;
        margin-bottom: 8px;
    }

    

    p {
        margin-top: 3px;

    }
    
    


</style>