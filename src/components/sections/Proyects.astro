---
import Section from "../Section.astro"

import { projects } from "@cv"
---

<Section title="Proyectos">

    <ul>
        {
            projects.map(
                ({name, isActive, description, url, highlights }) => {
                    return (
                        <li>
                            <article>
                                <header>
                                    <h3>
                                    <a href={url} title={`Ver el proyecto ${name}`}>
                                        {name}
                                    </a>
                                    {isActive && <span>&bull;</span>}
                                    </h3>
                                    <p>{description}</p>
                                </header>
                                <footer>
                                            {
                                                highlights.map((highlight) => {
                                                    return(
                                                        <span>{highlight}</span>
                                                    )
                                                }
                                            
                                                )
                                            }    
                                </footer>
                            </article>
                        </li>
                    )
                }
            )
        }
    </ul>

</Section>



<style>
    ul{
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
        text-wrap: wrap;
    }

    ul span {
        font-weight: 450;
    }

    article {
        border-radius: 8px;
        border: 1px solid #cfcfcf;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
        transition: linear 0.4s;
    }

    article header {
        flex: 1;
    }

    article p {
        font-size: 0.75rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    article h3 span {
        color: rgb(121, 250, 142);
    }

    article h3 span:hover {
        color: rgb(148, 253, 165);
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer span {
        border-radius: 6px;
        background: transparent;
        color: rgb(22, 44, 78);
        font-size: 0.7rem;
        font-weight: 550;
        padding: 0.2rem 0.6rem;
    }

    article:hover {
        color: rgb(120, 122, 125);
        background-color: #c9d3d0;
    }

    article h3 {
        font-weight: 500;
        color: #111;
        margin-bottom: 4px;
    }

    article h3:hover {
        color: rgb(85, 169, 141);
        text-decoration: underline;
    }

</style>